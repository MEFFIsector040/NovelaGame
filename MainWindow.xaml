<Window x:Class="CourseProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject.ViewModels"
        mc:Ignorable="d"
        Title="Тайны отеля - Интерактивная новелла" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="StatBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ChoiceButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1ABC9C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Панель заголовка и статистики -->
        <Border Grid.Row="0" Background="#1C2833" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding CurrentScene.Title}" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1ABC9C"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Новая игра" 
                            Command="{Binding NewGameCommand}"
                            Margin="5" Padding="10,5"/>
                    <Button Content="◀ Назад" 
                            Command="{Binding GoBackCommand}"
                            Margin="5" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Изображение сцены -->
            <Border Grid.Column="0" Background="Black" Margin="10">
                <Image Stretch="UniformToFill">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="pack://application:,,,/Resources/Images/default.jpg"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentScene.ImagePath}" Value="{x:Null}">
                                    <!-- Оставляем дефолтное изображение -->
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentScene.ImagePath}" Value="">
                                    <!-- Оставляем дефолтное изображение -->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>

                    <Image.Source>
                        <Binding Path="CurrentScene.ImagePath">
                            <Binding.FallbackValue>
                                pack://application:,,,/Resources/Images/default.jpg
                            </Binding.FallbackValue>
                        </Binding>
                    </Image.Source>
                </Image>
            </Border>

            <!-- Описание и выборы -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Статистика игрока -->
                <Border Grid.Row="0" Style="{StaticResource StatBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#1ABC9C"/>
                    </StackPanel>
                </Border>

                <!-- Описание сцены -->
                <Border Grid.Row="1" Style="{StaticResource StatBorderStyle}" Margin="0,10,0,10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding CurrentScene.Description}" 
                                   FontSize="18" 
                                   LineHeight="30"
                                   Padding="5"/>
                    </ScrollViewer>
                </Border>

                <!-- Выборы действий -->
                <ItemsControl Grid.Row="2" ItemsSource="{Binding AvailableChoices}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Text}" 
                                    Style="{StaticResource ChoiceButtonStyle}"
                                    Command="{Binding DataContext.SelectChoiceCommand, 
                                             RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="Эффекты:" FontWeight="Bold"/>
                                            <ItemsControl ItemsSource="{Binding Effects}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <Run Text="{Binding Key}"/>
                                                            <Run Text=": "/>
                                                            <Run Text="{Binding Value}"/>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>

        <!-- Статус-бар -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Сохранение игры:" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <TextBox x:Name="SaveNameTextBox" 
                         Text="Сохранение1" 
                         Width="150" 
                         Margin="5"/>

                <Button Content="💾 Сохранить" 
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding Text, ElementName=SaveNameTextBox}"
                        Margin="5"/>

                <ComboBox x:Name="LoadComboBox" 
                          ItemsSource="{Binding SaveFiles}"
                          Width="150" 
                          Margin="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Content="📂 Загрузить" 
                        Command="{Binding LoadCommand}"
                        CommandParameter="{Binding SelectedItem, ElementName=LoadComboBox}"
                        Margin="5"/>

                <Button Content="🗑️ Удалить" 
                        Command="{Binding DeleteSaveCommand}"
                        CommandParameter="{Binding SelectedItem, ElementName=LoadComboBox}"
                        Margin="5"
                        Background="#E74C3C"/>
            </StackPanel>
        </Border>

        <!-- Лог сообщений -->
        <Border Grid.Row="3" Background="#1C2833" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Лог игры:" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Foreground="#1ABC9C"
                           Margin="0,0,0,5"/>

                <Border Grid.Row="1" Background="#2C3E50" CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Messages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5" BorderBrush="#34495E" BorderThickness="0,0,0,1">
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="#BDC3C7"
                                                   FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>